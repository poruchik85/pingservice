version: '3'
services:
  php:
    container_name: pingservice_php
    build: build/php
    image: pingservice/php
    volumes:
      - "../back:/var/www"
      - "./build/php/php.ini:/usr/local/etc/php/php.ini:ro"
    ports:
      - "9000:9000"
    depends_on:
      - db
    networks:
      - pingservice
  nginx_back:
    container_name: pingservice_nginx_back
    build: build/nginx_back
    image: pingservice/nginx_back
    expose:
      - "80"
    ports:
      - "8081:80"
    volumes:
      - "../back:/var/www"
      - "./logs/nginx/back:/var/log/nginx/"
    depends_on:
      - db
    networks:
      - pingservice
  db:
    container_name: pingservice_db
    build: build/db
    image: pingservice/db
    volumes:
     - "./volumes/pgdata:/var/lib/postgresql/data"
    tmpfs:
     - /run
     - /tmp
    environment:
      POSTGRES_PASSWORD: postgres
    expose:
     - "5432"
    ports:
     - "5432:5432"
    networks:
      pingservice:
        aliases:
          - postgresql
  node:
    container_name: pingservice_node
    build: build/node
    image: pingservice/node
    volumes:
      - './volumes/npm:/.npm'
      - './volumes/npm:/home/node/.npm'
      - '../front:/app'
    ports:
      - "8080:8080"
    networks:
      - pingservice
  nginx_front:
    container_name: pingservice_nginx_front
    build: build/nginx_front
    image: pingservice/nginx_front
    expose:
      - "80"
    ports:
      - "80:80"
    volumes:
      - "./logs/nginx/front:/var/log/nginx/"
    depends_on:
      - node
    networks:
      - pingservice
networks:
  pingservice:
    external: true
